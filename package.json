{
	"name": "melonpan-block-code",
	"version": "2.0.3",
	"description": "Melonpan Block Code WordPress Plugin",
	"homepage": "https://wordpress.org/plugins/melonpan-block-code/",
	"author": "Alvaro Garcia",
	"private": true,
	"scripts": {
		"start": "npm run dev",
		"predev": "npm run clean:dist && npm run copy:prism_languages",
		"dev": "webpack --mode=development",
		"prebuild": "npm run clean:dist && npm run clean:release && npm run test",
		"build": "webpack --mode=production",
		"postbuild": "npm run replace:version && npm run copy:prism_languages && npm run copy:release",
		"clean:dist": "rm -rf dist",
		"clean:release": "rm -rf _release",
		"copy:release": "node scripts/copy-files.js",
		"copy:prism_languages": "node scripts/copy-prism_languages.js",
		"replace:version": "node scripts/replace-version.js",
		"test": "npm run test:types && npm run test:lint && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"**/*.{js,ts,tsx}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,tsx,php,json}\"",
		"prettier": "prettier --write \"**/*.{js,ts,tsx,php,json}\""
	},
	"dependencies": {
		"@babel/core": "^7.13.8",
		"@babel/plugin-proposal-class-properties": "^7.13.0",
		"@babel/preset-env": "^7.13.9",
		"@babel/preset-react": "^7.12.13",
		"@babel/preset-typescript": "^7.13.0",
		"@babel/register": "^7.13.8",
		"@types/lodash": "^4.14.168",
		"@types/prismjs": "^1.16.3",
		"@types/react": "^17.0.2",
		"@types/react-select": "^4.0.13",
		"@types/wordpress__block-editor": "^2.2.9",
		"@types/wordpress__blocks": "^6.4.12",
		"@types/wordpress__hooks": "^2.4.1",
		"@wordpress/browserslist-config": "^3.0.1",
		"@wordpress/components": "^12.0.7",
		"@wordpress/data": "^4.26.7",
		"@wordpress/dom-ready": "^2.12.1",
		"@wordpress/element": "^2.19.1",
		"@wordpress/hooks": "^2.11.1",
		"@wordpress/html-entities": "^2.10.1",
		"@wordpress/i18n": "^3.18.0",
		"babel-loader": "^8.2.2",
		"browserslist": "^4.16.3",
		"copy-text-to-clipboard": "^3.0.1",
		"copyfiles": "^2.4.1",
		"css-loader": "^5.1.1",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"mini-css-extract-plugin": "^1.3.9",
		"nib": "^1.1.2",
		"prismjs": "^1.23.0",
		"react-select": "^4.1.0",
		"replace-in-file": "^6.2.0",
		"stylus": "^0.54.8",
		"stylus-loader": "^5.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"typescript": "^4.2.2",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.16.1",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"prettier": "^2.2.1"
	}
}
