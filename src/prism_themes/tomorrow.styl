/**
 * prism.js tomorrow for JavaScript, CoffeeScript, CSS and HTML
 * Based on https://github.com/chriskempson/tomorrow-theme
 */

$Background = #ffffff
$CurrentLine = #efefef
$Selection = #d6d6d6
$Foreground = #4d4d4c
$Comment = #8e908c
$Red = #c82829
$Orange = #f5871f
$Yellow = #eab700
$Green = #718c00
$Aqua = #3e999f
$Blue = #4271ae
$Purple = #8959a8

.mbcode-theme-tomorrow

	pre
		color $Red
		background $Background
		font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace

		::-moz-selection
			background $Selection

		::selection
			background $Selection

	.token.plain-text
		color $Foreground

	.token.comment
	.token.block-comment
	.token.prolog
	.token.doctype
	.token.cdata
		color $Comment

	.token.property
	.token.tag
	.token.attr-name
	.token.namespace
	.token.deleted
	.token.variable
		color $Red

	.token.function-name
	.token.boolean
	.token.number
	.token.function
		color $Blue

	.token.inserted
	.token.class-name
		color $Yellow

	.token.delimiter
	.token.symbol
		color $Orange

	.token.selector
	.token.important
	.token.atrule
	.token.keyword
	.token.builtin
		color $Purple

	.token.string
	.token.char
	.token.attr-value
	.token.regex
		color $Green

	.token.operator
		color $Aqua

	.token.punctuation
	.token.constant
	.token.entity
	.token.url
		color $Foreground

	.token.important
	.token.bold
		font-weight bold

	.token.italic
		font-style italic

	.token.entity
		cursor help
