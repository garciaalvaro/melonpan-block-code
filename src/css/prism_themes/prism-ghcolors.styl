/**
 * GHColors theme by Avi Aryan (http://aviaryan.in)
 * Inspired by Github syntax coloring
 */

.mbcode-theme-ghcolors
	pre {
		color: #393A34;
		background-color: white;
		font-family: "Consolas", "Bitstream Vera Sans Mono", "Courier New", Courier, monospace;
	}

	pre::-moz-selection, pre ::-moz-selection,
	code::-moz-selection, code ::-moz-selection {
		background: #b3d4fc;
	}

	pre::selection, pre ::selection,
	code::selection, code ::selection {
		background: #b3d4fc;
	}

	.token.comment,
	.token.prolog,
	.token.doctype,
	.token.cdata {
		color: #999988; font-style: italic;
	}

	.token.namespace {
		opacity: .7;
	}

	.token.string,
	.token.attr-value {
		color: #e3116c;
	}
	.token.punctuation,
	.token.operator {
		color: #393A34; /* no highlight */
	}

	.token.entity,
	.token.url,
	.token.symbol,
	.token.number,
	.token.boolean,
	.token.variable,
	.token.constant,
	.token.property,
	.token.regex,
	.token.inserted {
		color: #36acaa;
	}

	.token.atrule,
	.token.keyword,
	.token.attr-name,
	.language-autohotkey .token.selector {
		color: #00a4db;
	}

	.token.function,
	.token.deleted,
	.language-autohotkey .token.tag {
		color: #9a050f;
	}

	.token.tag,
	.token.selector,
	.language-autohotkey .token.keyword {
		color: #00009f;
	}

	.token.important,
	.token.function,
	.token.bold {
		font-weight: bold;
	}

	.token.italic {
		font-style: italic;
	}