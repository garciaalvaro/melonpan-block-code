/**
 * prism.js tomorrow night eighties for JavaScript, CoffeeScript, CSS and HTML
 * Based on https://github.com/chriskempson/tomorrow-theme
 * @author Rose Pritchard
 */

$Background = #2d2d2d
$CurrentLine = #393939
$Selection = #515151
$Foreground = #cccccc
$Comment = #999999
$Red = #f2777a
$Orange = #f99157
$Yellow = #ffcc66
$Green = #99cc99
$Aqua = #66cccc
$Blue = #6699cc
$Purple = #cc99cc

.mbcode-theme-tomorrow_night_eighties
	pre
		color $Red
		background $Background
		font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace

		::-moz-selection
			background $Selection

		::selection
			background $Selection

	.token.plain-text
		color $Foreground

	.token.comment
	.token.block-comment
	.token.prolog
	.token.doctype
	.token.cdata
		color $Comment

	.token.property
	.token.tag
	.token.attr-name
	.token.namespace
	.token.deleted
	.token.variable
		color $Red

	.token.function-name
	.token.boolean
	.token.number
	.token.function
		color $Blue

	.token.inserted
	.token.class-name
		color $Yellow

	.token.delimiter
	.token.symbol
		color $Orange

	.token.selector
	.token.important
	.token.atrule
	.token.keyword
	.token.builtin
		color $Purple

	.token.string
	.token.char
	.token.attr-value
	.token.regex
		color $Green

	.token.operator
		color $Aqua

	.token.punctuation
	.token.constant
	.token.entity
	.token.url
		color $Foreground

	.token.important
	.token.bold
		font-weight bold

	.token.italic
		font-style italic

	.token.entity
		cursor help
